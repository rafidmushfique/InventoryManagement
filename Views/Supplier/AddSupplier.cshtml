@model InventoryManagement.Models.Domain.Supplier

@*@model IEnumerable<InventoryManagement.Models.Domain.Supplier>*@
<div class="container pt-5">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-dark">
                <div class="card-header">
                    <h3 class="card-title">Supplier Information</h3>
                </div>

                <form asp-action="AddSupplier" method="post">
                    <div class="card-body">
                        <div class="form-group">
                            <div class="row">
                                <div class="col">
                                    <label asp-for="SupplierId"> Supplier Id </label>
                                    <input disabled class="form-control" asp-for="SupplierId" />
                                    <span asp-validation-for="SupplierId" class="text-danger"></span>
                                </div>
                                <div class="col">
                                    <label asp-for="SupplierName"> Supplier Name </label>
                                    <input type="text" class="form-control" asp-for="SupplierName" />
                                    <span asp-validation-for="SupplierName" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <label asp-for="ContactInfo"> Contact Info </label>
                                    <input type="text" class="form-control" asp-for="ContactInfo" />
                                    <span asp-validation-for="ContactInfo" class="text-danger"></span>
                                </div>
                                <div class="col-6">
                                    <label asp-for="Address"> Address </label>
                                    <input type="text" class="form-control" asp-for="Address" />
                                    <span asp-validation-for="Address" class="text-danger"></span>
                                </div>
                            </div>

                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="row">
                            <div class="col-md-12 text-center">
                                <button type="submit" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        @if (TempData["msg"] != null)
        {
            <script>alert('@TempData["msg"]')</script>
        }


    </div>
</div>

<div class="container pt-5">

